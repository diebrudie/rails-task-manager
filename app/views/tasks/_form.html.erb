<div class="d-flex flex-column justify-content-center form-div">
  <%= form_for @task, html: {class: 'd-flex flex-column justify-content-center' } do |t| %>
    <div class="input-group ">
      <span class="input-group-text custom-form-label"><%= t.label :title %></span>
      <%= t.text_field :title, {class: 'custom-form-input'} %>
    </div>
    <div class="input-group ">
      <span class="input-group-text custom-form-label"><%= t.label :details %></span>
      <%= t.text_field :details, {class: 'custom-form-input'} %>
    </div>
    <div class="input-group mb-3">
      <div class="input-group-text">
        <%= t.check_box :completed, {class: 'form-check-input mt-0'}  %>
      </div>
      <%= t.label :completed %>
    </div>
  <%= t.submit %>
  <% end %>
  <br>
  <%= link_to 'Back', tasks_path %>
</div>
